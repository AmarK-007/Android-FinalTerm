<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Address"
        android:textSize="22dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/update_addressOneWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorAccent"
        app:errorTextAppearance="@style/error_appearance">

        <EditText
            android:id="@+id/update_address1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@fonts/roboto_light"
            android:hint="Address 1"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/white"
            android:textColorHint="@color/colorAccent"
            android:textSize="15sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Address 2 -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/update_addressTwoWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorAccent"
        app:errorTextAppearance="@style/error_appearance">

        <EditText
            android:id="@+id/update_address2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@fonts/roboto_light"
            android:hint="Address 2"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/white"
            android:textColorHint="@color/colorAccent"
            android:textSize="15sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Postal Code -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/update_postalCodeWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorAccent"
        app:errorTextAppearance="@style/error_appearance">

        <EditText
            android:id="@+id/update_postalCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@fonts/roboto_light"
            android:hint="Postal Code"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/white"
            android:textColorHint="@color/colorAccent"
            android:textSize="15sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- City -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/update_cityWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorAccent"
        app:errorTextAppearance="@style/error_appearance">

        <EditText
            android:id="@+id/update_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@fonts/roboto_light"
            android:hint="Ciy"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/white"
            android:textColorHint="@color/colorAccent"
            android:textSize="15sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/update_provinceSpinnerWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorAccent"
        app:errorTextAppearance="@style/error_appearance">

        <Spinner
            android:id="@+id/update_provinceSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:layout_gravity="center"
        android:backgroundTint="@color/colorAccent"
        android:id="@+id/update_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Update" />

</LinearLayout>